@model Web.Controllers.UserGroupsController.MODEL_USERGROUPS_Index
<h2>Yeni Kullanıcı Grubu Ekle</h2>

@using (Ajax.BeginForm("Add", new { }, new AjaxOptions { OnBegin = "Form_Begin", OnSuccess = "Form_Success", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }))
{
    @Html.AntiForgeryToken()

    <table class="form-table">
        <tr>
            <td class="label">
                @Html.DisplayNameFor(m => m.ADD_FORM.FORM.NAME)
                @Html.ValidationMessageFor(m => m.ADD_FORM.FORM.NAME)
            </td>
            <td>
                @Html.EditorFor(m => m.ADD_FORM.FORM.NAME)
            </td>
        </tr>
        <tr>
            <td class="label">
                @Html.DisplayNameFor(m => m.ADD_FORM.FORM.CODE)
                @Html.ValidationMessageFor(m => m.ADD_FORM.FORM.CODE)
            </td>
            <td>
                @Html.EditorFor(m => m.ADD_FORM.FORM.CODE)
            </td>
        </tr>
    </table>

    <div class="buttons-area">
        <button class="default" type="submit"><i class="fa fa-save left fa-2x"></i>Kaydet</button>
    </div>
}