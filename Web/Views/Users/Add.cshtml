@using Data.BLL
@model Web.Controllers.UsersController.MODEL_USERS_Index
<h2>Yeni Kullanıcı Ekle</h2>

@using (Ajax.BeginForm("Add", new { }, new AjaxOptions { OnBegin = "Form_Begin", OnSuccess = "Form_Success", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }))
{
    @Html.AntiForgeryToken()

    <table class="form-table">
        <tr>
            <td colspan="2" class="center">
                <img src="@Url.RouteUrl("Image", new { url = "~/Content/Image/noImage.png", w = 120, h = 150 })"/>
                <br /><br />
                @Html.HiddenFor(m => m.ADD_FORM.FORM.IMAGE)
            </td>
        </tr>
        <tr>
            <td class="label">
                @Html.DisplayNameFor(m => m.ADD_FORM.FORM.NAME)
                @Html.ValidationMessageFor(m => m.ADD_FORM.FORM.NAME)
            </td>
            <td>
                @Html.EditorFor(m => m.ADD_FORM.FORM.NAME)
            </td>
        </tr>
        <tr>
            <td class="label">
                @Html.DisplayNameFor(m => m.ADD_FORM.FORM.SURNAME)
                @Html.ValidationMessageFor(m => m.ADD_FORM.FORM.SURNAME)
            </td>
            <td>
                @Html.EditorFor(m => m.ADD_FORM.FORM.SURNAME)
            </td>
        </tr>
        <tr>
            <td class="label">
                @Html.DisplayNameFor(m => m.ADD_FORM.FORM.EMAIL)
                @Html.ValidationMessageFor(m => m.ADD_FORM.FORM.EMAIL)
            </td>
            <td>
                @Html.EditorFor(m => m.ADD_FORM.FORM.EMAIL)
            </td>
        </tr>
        <tr>
            <td class="label">
                @Html.DisplayNameFor(m => m.ADD_FORM.USERGROUP_ID)
                @Html.ValidationMessageFor(m => m.ADD_FORM.USERGROUP_ID)
            </td>
            <td>
                @Html.EditorFor(m => m.ADD_FORM.USERGROUP_ID, "_Combobox", new { node = Enum_Combobox.UserGroups, style = "width:125px;" })
            </td>
        </tr>
        <tr>
            <td class="label">
                @Html.DisplayNameFor(m => m.ADD_FORM.FORM.USERNAME)
                @Html.ValidationMessageFor(m => m.ADD_FORM.FORM.USERNAME)
            </td>
            <td>
                @Html.EditorFor(m => m.ADD_FORM.FORM.USERNAME)
            </td>
        </tr>
        <tr>
            <td class="label">
                @Html.DisplayNameFor(m => m.ADD_FORM.FORM.PASSWORD)
                @Html.ValidationMessageFor(m => m.ADD_FORM.FORM.PASSWORD)
            </td>
            <td>
                @Html.EditorFor(m => m.ADD_FORM.FORM.PASSWORD)
            </td>
        </tr>
    </table>

    <div class="buttons-area">
        <button class="default" type="submit"><i class="fa fa-save left fa-2x"></i>Kaydet</button>
    </div>
}